<section class="page-section" id="contact">
  <div class="container">
    <!-- Contact Section Heading-->
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Obrigado!!</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
      <div class="divider-custom-line"></div>
      <br>
      <div class="divider-custom-line"></div>
      <br>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-7">
        <h3 class="mb-4">Valor:
          <%=@payment.value%>
        </h3>
        <h4 class="mb-4">Clique no botão para copiar o código pix</h4>
        <a href="" class="btn btn-primary" data-clipboard-text="<%=@payment.pix%>">
          <i class="fa fa-copy"></i> <span> Copiar</span>
        </a>
      </div>
      <div class="col-lg-5">
        <h4>QR CODE:</h4>
        <img src="<%=@payment.qr_code%>">
      </div>
    </div>
  </div>
</div>
<script>
  const clipboard = new ClipboardJS('.btn')
  clipboard.on('success', function(e) {
      alert("Código PIX copiado")
  });
  clipboard.on('error', function(e) {
      alert("Falha ao copiar texto")
  });
</script>
