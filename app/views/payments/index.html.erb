<p id="notice"><%= notice %></p>
<h1><%=@product.name%></h1>
<h3></h3>
<table>
  <thead>
    <tr>
      <th>Payer name</th>
      <th>Payer phone</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Payer city</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payer_name %></td>
        <td><%= payment.payer_phone %></td>
        <td><%= payment.description %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.payer_city %></td>
        <td><%= link_to 'Show', product_payment_url(@product, payment) %></td>
        <td><%= link_to 'Edit', edit_product_payment_path(@product, payment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Payment', new_product_payment_path %>
